@{
    ViewData["Title"] = "QUADS...NeverSkipLegDay";
}

@*@model List<ModelName>*@

<div class="container">

    <div class="row"><!--ROW 1-->

        <div class="col">

        </div>

        <div class="col">
            <h1>URGENT</h1>
        </div>

        <div class="col">
            <h1>NOT URGENT</h1>
        </div>

    </div>


    <div class="row">
        <!--ROW 2-->

        <div class="col">
            <h1>IMPORTANT</h1>
        </div>

        <!--QUADRANT 1-->
        <div class="col">
            <table>
                @foreach (x in Model)
                {
                    @if (@x.Quadrant == 1)
                    {
                        <tr>
                            <td id="taskName">@x.Task</td>
                            <td id="category">@x.Category</td>
                            <td id="dueDate">@x.DueDate</td>
                            <td id="completed">@x.Completed</td>
                        </tr>
                    }
                }
            </table>
        </div>

        <!--QUADRANT 2-->
        <div class="col">
            <table>
                @foreach (x in Model)
                {
                    @if (@x.Quadrant == 2)
                    {
                        <tr>
                            <td id="taskName">@x.Task</td>
                            <td id="category">@x.Category</td>
                            <td id="dueDate">@x.DueDate</td>
                            <td id="completed">@x.Completed</td>
                        </tr>
                    }
                }
            </table>
        </div>

    </div>


    <div class="row">
        <!--ROW 3-->
        <div class="col">
            <h1>NOT IMPORTANT</h1>
        </div>

        <!--QUADRANT 3-->
