            <table>
                @foreach (x in Model)
                {
                    @if (@x.Quadrant == 3)
                    {
                        <tr>
                            <td id="taskName">@x.Task</td>
                            <td id="category">@x.Category</td>
                            <td id="dueDate">@x.DueDate</td>
                            <td id="completed">@x.Completed</td>
                        </tr>
                    }
                }
            </table>
        </div>

        <!--QUADRANT 4-->
        <div class="col">
            <table>
                @foreach (x in Model)
                {
                    @if (@x.Quadrant == 4)
                    { 
                        <tr>
                            <td id="taskName">@x.Task</td>
                            <td id="category">@x.Category</td>
                            <td id="dueDate">@x.DueDate</td>
                            <td id="completed">@x.Completed</td>
                        </tr>
                    }
                }
            </table>
        </div>

    </div>
</div>