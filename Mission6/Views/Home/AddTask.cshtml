@{
    ViewData["Title"] = "Add Task";
}

@model Mission6.Models.TaskResponse

<div class="text-center">
    <h4 class="display-4">Add a New Task!</h4>
</div>

<div class="text-center">
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="TaskName">Task Name:</label>
        <input asp-for="TaskName" />
        <br />
        <select>
            <option value="">Select a Category</option>
            @foreach (TaskResponse t in ViewBag.Categories)
            {
                <option value="@t.CategoryID">@t.CategoryName</option>
            }
        </select>@
        <br />
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" />
        <br />
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value="1">Quadrant 1</option>
            <option value="2">Quadrant 2</option>
            <option value="3">Quadrant 3</option>
            <option value="4">Quadrant 4</option>
        </select>
        <label asp-for="Completed">Completed?:</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <button type="submit">Submit New Task</button>
    </form>

</div>
