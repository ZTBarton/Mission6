@{
    ViewData["Title"] = "Add Task";
}

@model Mission6.Models.TaskResponse

<div class="text-center">
    <h4 class="display-4">Add a New Task!</h4>
</div>

<div class="text-center">
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="TaskName">Task Name:</label>
        <input asp-for="TaskName" />
        <br />
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" type="date" />
        <br />
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value="1">Important/Urgent</option>
            <option value="2">Important/Not Urgent</option>
            <option value="3">Not Important/Urgent</option>
            <option value="4">Not Important/Not Urgent</option>
        </select>
        <br />
        <label asp-for="Completed">Completed?:</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <br />
        <button type="submit">Submit New Task</button>
    </form>

</div>
